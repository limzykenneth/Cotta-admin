{
	"extends": "eslint:recommended",
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"warn",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"warn",
			"always"
		],
		"no-unused-vars": [ "warn", {
			"args": "none"
		}],
		"no-console": "off",
		"no-undef": "error",
		"no-new": "off",
		"space-before-function-paren": "off",
		"space-before-blocks": "off"
	},
	"plugins": [
		"vue"
	],
	"env": {
		"browser": true,
        "commonjs": true,
        "es6": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"root": true
}
